{
  "manifest_version": 3,
  "name": "Super Shopper â€” Online Shopping Assistant (MVP)",
  "version": "0.1.0",
  "description": "Shows 'True Price' next to product prices (shipping + tax).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["price_utils.js", "product_extractor.js", "comparison_modal.js", "content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/shopping_cart.png",
    "48": "icons/shopping_cart.png",
    "128": "icons/shopping_cart.png"
  }
}
